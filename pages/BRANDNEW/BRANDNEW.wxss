/* pages/BRANDNEW/BRANDNEW.wxss */
page{
  background-color: #efefef;
}

.wx-swiper-dots {
  position: relative;
  /* unset复原重置属性值 */
  left: unset !important;
  right: 0rpx;
}

.swiper{
  height: 450rpx;
}

.Carouselmap{
  width: 100vw;
  height: 450rpx;
}

.container{
  background-color: #fff;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  height: 300rpx;
  flex-wrap: nowrap;
  padding: 80rpx 0rpx;
  box-sizing: border-box;
}

.text{
  font-weight: bold;
}

.title{
  width: 450rpx;
  height: 200rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.image{
  height: 200rpx;
  width: 200rpx;
}

.content{
  width: 450rpx;
  height: 50rpx;
  display: flex;
  justify-content: space-between;
}

.time{
  height: 100rpx;
  line-height:104rpx;
  background-color: #fff;
  border-top: 2rpx solid #efefef ;
  border-bottom: 2rpx  solid #efefef;
  padding-left: 40rpx;
}

.container2{
  background-color: #fff;
  display: flex;
  flex-direction: row;
  height: 200rpx;
  /* width: 450rpx; */
  justify-content: space-around;
  /* padding: 10rpx; */
}

.location{
  background-color: #fff;
  height: 200rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-evenly;
}
.navigator{
  align-self: center;
}
.navigate{
  width: 100rpx;
  height: 100rpx;
  text-align: center;
}

.container2-text2{
  width: 500rpx;
}

.btn{
  background-color: #cecece;
  text-align: center;
  /* margin: 0 auto; */
  left: 50%;
  transform: translateX(-50%); 
  height: 100rpx;
  position: fixed;
  z-index: 1;
  bottom: 0;
  width: 90%;
}

.text1{
  line-height: 100rpx;
}